<!-- Modal -->
<div class="modal modal-cgu fade" id="modalCgu" tabindex="-1" role="dialog" aria-labelledby="modalCgu" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalcguTitle">Conditions générales d'utilisation</h5>
            </div>
            <div class="modal-body">
                <div class="">
                    <div class="default-content">
                        <h2 class="faq-title">{{ condition.title }}</h2>
                        <div class="list-faq">
                            {{ condition.content|raw }}
                        </div>
                    </div>
                </div>
                <form action="{{ path('middle_condition_validate') }}" method="post">
                    <div class="modal-actions">
                        <div class="form-group">
                          <div class="form-checkbox form-checkbox-cgu">
                            <input class="form-check-input" type="checkbox" name="cgu" id="cgu" required>
                            <label for="cgu">
                                <span class="icon"></span> <span class="label-align">{{ 'info.cgu'|trans }}</span>
                            </label>
                          </div>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <button type="submit" class="btn btn-secondary btn-sm" id="confirmCgu" name="button">
                                  {{ 'form.action.confirmed'|trans }}
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
