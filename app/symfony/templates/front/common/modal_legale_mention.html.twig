<!-- Modal -->
{% set page = constant('App\\Entity\\Page::CODE_LEGAL_NOTICE')|getPage %}
<div class="modal fade" id="modalMentionsLegales" tabindex="-1" role="dialog" aria-labelledby="modalMentionsLegalesLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalMentionsLegalesLabel">{{ page.title }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          {% for block in page.blocks %}
              {{ block.content|raw }}
          {% endfor %}
      </div>
    </div>
  </div>
</div>
